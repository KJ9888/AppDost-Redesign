{
  // Performance optimizations - File watching and searching
  "search.exclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/dist": true,
    "**/dist-ssr": true,
    "**/.git": true,
    "**/package-lock.json": true,
    "**/.vite": true,
    "**/.cache": true
  },

  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/dist-ssr/**": true,
    "**/.vite/**": true,
    "**/.cache/**": true,
    "**/build/**": true
  },

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true
  },

  // MAXIMUM PERFORMANCE MODE
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.inlayHints.enabled": "off",
  "editor.stickyScroll.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "line",
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.folding": true,
  "editor.foldingHighlight": false,
  "editor.smoothScrolling": false,
  "editor.cursorSmoothCaretAnimation": "off",
  "breadcrumbs.enabled": true,

  // Editor performance - FASTER SAVES
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {},
  "editor.quickSuggestions": {
    "other": "inline",
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": true,

  // TypeScript/JavaScript performance - TURBO MODE
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.disableAutomaticTypeAcquisition": true,
  "javascript.suggest.enabled": true,
  "javascript.validate.enable": true,
  "typescript.surveys.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "javascript.updateImportsOnFileMove.enabled": "never",

  // ESLint optimization
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.runtime": "node",
  "eslint.validate": ["javascript", "javascriptreact"],
  "eslint.codeActionsOnSave.mode": "problems",

  // Tailwind CSS
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.emmetCompletions": true,
  "css.validate": false,

  // Git performance - MINIMAL
  "git.enabled": true,
  "git.autorefresh": false,
  "git.autofetch": false,
  "git.decorations.enabled": false,
  "git.showPushSuccessNotification": false,
  "scm.diffDecorations": "none",

  // Terminal - FAST
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.smoothScrolling": false,

  // Auto save - INSTANT
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 300,
  "files.trimTrailingWhitespace": false,
  "files.trimFinalNewlines": false,
  "files.insertFinalNewline": false,

  // Disable heavy extensions features
  "telemetry.telemetryLevel": "off",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,

  // CRITICAL: Chat/Copilot performance - NO HISTORY SAVING ON CLOSE
  "github.copilot.chat.saveHistory": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "chat.experimental.persistChatEdits": false,
  
  // Window performance - INSTANT CLOSE
  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  "window.enableMenuBarMnemonics": false,
  "window.restoreWindows": "none",
  "window.closeWhenEmpty": true,
  
  // Workbench performance - LIGHTNING FAST
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": false,
  "workbench.list.smoothScrolling": false,
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.startupEditor": "none",
  "workbench.editor.restoreViewState": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 5,
  "workbench.editor.limit.perEditorGroup": true,

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  }
}
